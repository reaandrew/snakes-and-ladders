{
  "name": "@snakes-and-ladders/backend",
  "version": "0.0.0",
  "private": true,
  "description": "AWS Lambda backend for Snakes and Ladders",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/handlers/*.ts --bundle --platform=node --target=node20 --outdir=dist --format=cjs --external:@aws-sdk/*",
    "clean": "rm -rf dist",
    "dev": "vitest --watch",
    "local": "tsx src/local/server.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.990.0",
    "@aws-sdk/client-dynamodb": "^3.990.0",
    "@aws-sdk/lib-dynamodb": "^3.990.0",
    "@snakes-and-ladders/shared": "workspace:*",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^2.0.0",
    "esbuild": "^0.27.3",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0",
    "ws": "^8.16.0"
  }
}
